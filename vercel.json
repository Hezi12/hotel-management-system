{
  "version": 2,
  "buildCommand": "./build.sh",
  "installCommand": "cd ./client && npm install && cd ../server && npm install",
  "outputDirectory": "client/.next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 