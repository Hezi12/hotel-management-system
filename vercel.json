{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" }
  ],
  "functions": {
    "api/login.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/create-admin.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 